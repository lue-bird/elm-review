{
    "compilerOptions": {
        "outDir": "src-compiled",
        "removeComments": true,
        "target": "ESNext",
        "declaration": true,
        "allowJs": true,
        // Module resolution
        "baseUrl": "src",
        "esModuleInterop": true,
        "moduleResolution": "node",
        // Source Map
        "sourceMap": true,
        "sourceRoot": "./src",
        // Strict Checks
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        // Linter Checks
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*",
        "**/elm-stuff/"
    ]
}